# ConnectHub Production Environment Configuration
# DO NOT commit this file to version control in production
# Use proper secret management systems like Kubernetes Secrets, AWS Secrets Manager, etc.

# Application
NODE_ENV=production
PORT=5000
APP_NAME=ConnectHub
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://connecthub:CHANGE_ME@localhost:5432/connecthub
REDIS_URL=redis://:CHANGE_ME@localhost:6379

# Security
JWT_SECRET=CHANGE_ME_TO_STRONG_SECRET_KEY_32_CHARS_MIN
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Service (Gmail example)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM="ConnectHub <noreply@connecthub.com>"

# File Upload
UPLOAD_MAX_SIZE=52428800
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/avi
UPLOAD_PATH=/app/uploads

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
SOCKET_CORS_ORIGIN=https://your-domain.com

# External APIs (Configure as needed)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_PRIVATE_KEY=

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Performance
CACHE_TTL=3600
SESSION_TTL=604800
FEED_CACHE_TTL=300

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_VIDEO_CALLS=true
ENABLE_CONTENT_MODERATION=true
ENABLE_DATING_FEATURES=true
ENABLE_ENTERPRISE_FEATURES=true

# Third-Party Services
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
STRIPE_SECRET_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Message Queue
RABBITMQ_URL=amqp://connecthub:CHANGE_ME@localhost:5672

# CDN Configuration
CDN_BASE_URL=https://cdn.your-domain.com
STATIC_FILES_URL=https://static.your-domain.com

# Mobile App Configuration
IOS_APP_ID=com.connecthub.ios
ANDROID_PACKAGE_NAME=com.connecthub.android
DEEP_LINK_SCHEME=connecthub

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# Social Media Integration
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
